<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.shopping.ShoppingActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/woowa_toolbar_gray"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/tb_shopping"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/tb_shopping"
            app:titleTextColor="@color/white"
            android:paddingStart="26dp">

            <ImageView
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cart"
                android:id="@+id/iv_basket"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tb_shopping"
                app:layout_constraintTop_toTopOf="@+id/tb_shopping"
                android:layout_marginEnd="26dp" />

        </androidx.appcompat.widget.Toolbar>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/rv_shopping"
            tools:listitem="@layout/item_shopping"
            tools:itemCount="10"
            app:spanCount="2"
            app:layout_constraintBottom_toTopOf="@+id/tv_more"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tb_shopping" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="match_parent"
            android:text="@string/tv_more"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/rv_shopping"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/shape_woowa_light_gray_line_2_rect"
            android:textColor="@color/woowa_text_black"
            android:paddingVertical="16dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
