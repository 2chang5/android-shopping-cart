<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.basket.BasketActivity">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/ic_left_arrow"
            android:background="@color/woowa_toolbar_gray"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            app:title="@string/tv_cart"
            app:titleTextColor="@color/white"
            app:navigationIconTint="@color/white"
            android:id="@+id/tb_basket"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_basket"
            android:layout_width="match_parent"
            tools:itemCount="5"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_basket"
            android:layout_marginBottom="30dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/layout_navigator"
            app:layout_constraintTop_toBottomOf="@+id/tb_basket"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_navigator"
            android:layout_width="match_parent"
            android:layout_marginVertical="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_previous"
                android:layout_width="42dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@+id/tv_current_page"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/shape_colored_previous"
                android:layout_height="42dp"
                android:text="@string/tv_previous" />

            <TextView
                android:id="@+id/tv_current_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"
                android:text="@string/default_page"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/woowa_text_black"
                app:layout_constraintTop_toTopOf="@+id/btn_previous"
                app:layout_constraintBottom_toBottomOf="@+id/btn_previous"
                android:textSize="22sp"
                app:layout_constraintStart_toEndOf="@+id/btn_previous"
                app:layout_constraintEnd_toStartOf="@id/btn_next" />

            <TextView
                android:id="@+id/btn_next"
                android:layout_width="42dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_current_page"
                android:background="@drawable/shape_colored_next"
                android:layout_height="42dp"
                android:text="@string/tv_next" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
