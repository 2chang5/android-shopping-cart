<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="product"
            type="woowacourse.shopping.ui.model.Product" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.productdetail.ProductDetailActivity">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/woowa_toolbar_gray"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/tb_product_detail"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_close"
                android:id="@+id/iv_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/tb_shopping"
                app:layout_constraintTop_toTopOf="@+id/tb_shopping"
                android:layout_marginEnd="26dp" />

        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:image="@{product.imageUrl}"
            app:layout_constraintDimensionRatio="1"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="centerCrop"
            android:id="@+id/iv_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tb_product_detail" />

        <TextView
            tools:text="[든든] 동원 스위트콘"
            android:layout_width="0dp"
            android:text="@{product.name}"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/woowa_text_black"
            android:textSize="24sp"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:id="@+id/tv_name"
            app:layout_constraintTop_toBottomOf="@+id/iv_product"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/woowa_light_gray"
            tools:layout_editor_absoluteX="-34dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name" />

        <TextView
            android:text="@string/tv_price_title"
            android:layout_marginStart="18dp"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:textColor="@color/woowa_text_black"
            android:includeFontPadding="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            tools:text="99,800원"
            android:text="@{@string/price_format(product.price.value)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp"
            android:textSize="20sp"
            android:textColor="@color/woowa_text_black"
            android:includeFontPadding="false"
            android:id="@+id/tv_price"
            app:layout_constraintTop_toTopOf="@+id/tv_price_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:text="@string/btn_basket"
            android:layout_width="0dp"
            android:paddingVertical="12dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/woowa_button"
            android:layout_height="wrap_content"
            android:id="@+id/btn_basket"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
